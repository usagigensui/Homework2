<p id="notice"><%= flash[:notice] %></p>
<h1>Editing Book</h1>
<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <div class="error">
    <p><strong>error</strong></p>
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %></ul>
  </div>
<% end %>
<!--編集フォーム-->
<%= form_with model:@book, local:true do |f| %>
  <div class="fieid">
    <label for="form_title">Title</label><br>
    <%= f.text_field :title, id: "form_title" %>
  </div>
  <div class="fieid">
    <label for="form_body">Body</label><br>
    <%= f.text_area :body, id: "form_body" %>
  </div>
  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
<% end %>
<%= link_to "Show", book_path(@book[:id]) %> | <%= link_to "Back", books_path %>