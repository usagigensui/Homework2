<%= flash[:notice] %>
<h1>Editing Book</h1>
<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました<br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!--編集フォーム-->
<%= form_with model:@book, local:true do |f| %>
  <div>
    <label for="form_title">Title</label><br>
    <%= f.text_field :title, id: "form_title" %>
  </div>
  <div>
    <label for="form_body">Body</label><br>
    <%= f.text_area :body, id: "form_body" %>
  </div>
  <%= f.submit "Uodate Note" %>
<% end %>
<%= link_to "Show", book_path(@book[:id]) %> | <%= link_to "Back", books_path %>