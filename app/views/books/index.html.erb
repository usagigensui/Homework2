<p id="notice"><%= flash[:notice] %></p>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
</table>

<h1>New Book</h1>
<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <div class="error">
    <p><strong>error</strong></p>
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %></ul>
  </div>
<% end %>
<!--投稿フォーム-->
<%= form_with model:@book, local:true do |f| %>
  <div class="fieid">
    <label for="form_title">Title</label><br>
    <%= f.text_field :title, id: "form_title" %>
  </div>
  <div class="fieid">
    <label for="form_body">Body</label><br>
    <%= f.text_area :body, id: "form_body" %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>